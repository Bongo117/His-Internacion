doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title= titulo
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="/css/estilos.css")
  body(class=bodyClass || '')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/") 
          i.bi.bi-hospital.me-2
          | HIS Internación
        ul.navbar-nav.ms-auto
          if !user
            li.nav-item
              a.nav-link(href="/auth/login")
                i.bi.bi-box-arrow-in-right.me-1
                | Iniciar sesión
          else
            li.nav-item
              a.nav-link(href="/pacientes")
                i.bi.bi-people-fill.me-1
                | Pacientes
            li.nav-item
              a.nav-link(href="/admisiones")
                i.bi.bi-card-list.me-1
                | Admisiones
            li.nav-item
              a.nav-link(href="/evaluaciones")
                i.bi.bi-pencil-square.me-1
                | Evoluciones
            li.nav-item
              a.nav-link(href="/camas")
                i.bi.bi-lamp-fill.me-1
                | Camas
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", id="userDropdown", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                i.bi.bi-person-circle.me-1
                | #{user.username || 'Usuario'}
              ul.dropdown-menu.dropdown-menu-end(aria-labelledby="userDropdown")
                li
                  a.dropdown-item(href="/auth/logout")
                    i.bi.bi-box-arrow-right.me-2
                    | Cerrar sesión
                    
    .container.mt-4
      block content
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
